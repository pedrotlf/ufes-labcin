<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyle">
        <item name="android:padding">15dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@drawable/background_edit_text</item>
    </style>

    <style name="EditTextSingleLineAutoCompleteStyle" parent="EditTextStyle">
        <item name="android:gravity">start</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

</resources>